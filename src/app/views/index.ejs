<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <title>Tic Tac Toe Online</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1>HomePage</h1>
        </div>
        <div class="container">
                <% if(sala_cheia ==true) {%>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-danger">
                                <strong>Atenção!</strong>
                                <ul>
                                    <li>A Sala que você está tentando entrar já está cheia.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% } %>
                <% if(sala_inexistente ==true) {%>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-danger">
                                <strong>Atenção!</strong>
                                <ul>
                                    <li>A Sala que você está tentando entrar não existe!</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% } %>
                <% if(validacao.length > 0) {%>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-danger">
                                <strong>Atenção!</strong>
                                <ul>
                                        <% for(var i = 0; i < validacao.length; i++) { %>
                                            <li><%=validacao[i].msg%></li>
                                        <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% } %>
            <div class="row vertical-offset-80">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row-fluid user-row">
                                Criar uma partida
                            </div>
                        </div>
                        <div class="panel-body">
                            <form accept-charset="UTF-8" role="form" class="form-signin" action="/create_room" method="post">
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>
                                    <input class="form-control" placeholder="Nome ou apelido" id="apelido" name="apelido" type="text">
                                    <br></br>
                                    <input class="btn btn-lg btn-success btn-block" type="submit" id="criar" value="Criar »">
                                </fieldset>
                            </form>
                        </div>
                    </div>

                    

                </div>
            </div>


            <!-- entrar em uma partida -->
            <div class="row vertical-offset-80">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row-fluid user-row">
                                Entrar em uma partida
                            </div>
                        </div>
                        <div class="panel-body">
                            <form accept-charset="UTF-8" role="form" class="form-signin" action="/play" method="post">
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>
                                    <input class="form-control" placeholder="Nome ou apelido" id="apelido" name="apelido" type="text">
                                    <br></br>
                                    <input class="form-control" placeholder="Número da Sala" id="sala" name="sala" type="text">
                                    <br></br>
                                    <input class="btn btn-lg btn-success btn-block" type="submit" id="entrar" value="Entrar »">
                                </fieldset>
                            </form>
                        </div>
                    </div>

                

                </div>
            </div>
        </div>
    </body>
</html>